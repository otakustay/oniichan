{
  "private": true,
  "name": "@oniichan/web",
  "version": "1.9.0",
  "description": "Web app for Oniichan Coding Assistant",
  "scripts": {
    "build": "rspack build && tsc",
    "watch": "rspack build --watch",
    "watch-types": "tsc --watch",
    "serve": "rspack serve",
    "lint": "eslint --max-warnings=0 --fix src",
    "start": "rspack serve"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "devDependencies": {
    "@emotion/css": "^11.13.5",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@oniichan/editor-host": "workspace:*",
    "@oniichan/kernel": "workspace:*",
    "@oniichan/shared": "workspace:*",
    "@oniichan/storage": "workspace:*",
    "@oniichan/web-host": "workspace:*",
    "@otakustay/ipc": "^2.3.1",
    "@rspack/cli": "^1.1.8",
    "@rspack/core": "^1.1.8",
    "@rspack/plugin-react-refresh": "^1.0.1",
    "@types/mustache": "^4.2.5",
    "@types/react": "^19.0.3",
    "@types/react-copy-to-clipboard": "^5.0.7",
    "@types/react-dom": "^19.0.2",
    "@types/vscode-webview": "^1.57.5",
    "esbuild": "^0.24.2",
    "esbuild-register": "^3.6.0",
    "huse": "^2.0.4",
    "jotai": "^2.11.0",
    "material-file-icons": "^2.4.0",
    "motion": "^11.16.0",
    "react": "^19.0.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.4.0",
    "react-markdown": "^9.0.3",
    "react-refresh": "^0.16.0",
    "react-spinners": "^0.15.0",
    "shiki": "^1.26.1"
  },
  "nx": {
    "targets": {
      "build": {
        "outputs": [
          "{projectRoot}/../vscode/dist/web"
        ]
      }
    }
  }
}
